{
  "name": "otel-pino-transport",
  "version": "1.0.6",
  "description": "Pino OpenTelemetry Transport for log-sdk",
  "main": "lib/index.js",
  "typings": "lib/index",
  "type": "commonjs",
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "tsc",
    "test": "npm run test:unit",
    "test:cov": "jest --coverage",
    "test:unit": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pragmaticivan/otel-pino-transport.git"
  },
  "keywords": [
    "opentelemetry",
    "pino"
  ],
  "author": "Ivan Santos",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/pragmaticivan/otel-pino-transport/issues"
  },
  "homepage": "https://github.com/pragmaticivan/otel-pino-transport#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "pino": "^9.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.5",
    "typescript": "5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "rootDir": "./src",
    "reporters": [
      "default"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./test-results/coverage",
    "testEnvironment": "node"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@opentelemetry/api-logs": "^0.52.1",
    "pino-abstract-transport": "^2.0.0"
  }
}
